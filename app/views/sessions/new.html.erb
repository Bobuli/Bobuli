<h1 class="title">Sign In</h1>
<p class="byline"><small>  </small></p>

   
<div class="entry">
 <p> 
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
</p>
</div>