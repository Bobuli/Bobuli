  </tr>

<% @spielbegegnungen.each do |spielbegegnung| %>
  <tr>
    <td>  <%= Verein.find(spielbegegnung.verein_heim_id).name %></td>
    <td>  <%= Verein.find(spielbegegnung.verein_gast_id).name %></td>
    <td>  <%= spielbegegnung.datum.to_date %></td>
    <td>  <%= spielbegegnung.datum.to_s(:time)  %></td>
    <td>  <% if spielbegegnung.tore_heim.nil? %>
               - : -
            <% else %>
               <%= spielbegegnung.tore_heim %> : <%= spielbegegnung.tore_gast %>
          <% end %></td>
    
    
    <!-- REFACTOR ME PLEASE-->
    <% x = true %>
    <% @tipps.each do |tipp| %>

      <% if spielbegegnung.tipps.include?(tipp)%>
        <% x = false%>

                 
        <td><%= tipp.tore_heim %> : <%= tipp.tore_gast %></td>  
        <td><%= link_to 'tippen', edit_tipp_path(tipp) %></td>
      <% end %>
    <% end %>  
    <% if x %>
      <td> - : -</td>
      <td><%= link_to 'tippen', new_tipp_path(:id => spielbegegnung.id) %></td>
    <% end %>
    
  </tr>
<% end %>
</table>


  
  
  

